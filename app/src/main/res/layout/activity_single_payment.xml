<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SinglePayment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"

            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/jsonConsump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/consumption"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/consumption"
            android:padding="20dp"
            android:text="consumption:"
            android:textColor="@color/flowerBlue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/SPid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/txt_round"
            android:padding="20dp"
            android:text="ID:"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="81dp"
            android:background="@color/colorPrimaryDark"/>


        <TextView
            android:id="@+id/consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="103dp"
            android:background="@drawable/txt_round"
            android:padding="20dp"
            android:text="Consumption:"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="187dp"
            android:background="@color/colorPrimaryDark" />


        <TextView
            android:id="@+id/costKw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/consumption"
            android:layout_alignEnd="@+id/consumption"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/txt_round"
            android:padding="20dp"
            android:text="Cost of 1 kw:"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="277dp"
            android:background="@color/colorPrimaryDark" />
    <TextView
        android:id="@+id/issuedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/costKw"
        android:layout_alignStart="@+id/costKw"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/txt_round"
        android:padding="20dp"
        android:text="Issued date:"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"


            android:layout_above="@+id/jsonTotal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="17dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/issuedDate"
            android:layout_alignStart="@+id/costKw"
            android:layout_marginStart="14dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/txt_round"
            android:padding="20dp"
            android:text="Total:"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"


            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="476dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/PaymentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/txt_round"
            android:padding="20dp"
            android:text="Payed date"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jsonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/consumption"
            android:layout_alignStart="@+id/SPid"
            android:layout_marginStart="65dp"
            android:layout_marginBottom="24dp"
            android:padding="20dp"
            android:text="id:"
            android:textColor="@color/blue"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/jsonCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/costKw"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="109dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"

            android:layout_toEndOf="@+id/costKw"
            android:padding="20dp"
            android:text="cost:"
            android:textColor="@color/flowerBlue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jsonIssued"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="288dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/issuedDate"

            android:padding="20dp"
            android:text="issued:"
            android:textColor="@color/flowerBlue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jsonTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/total"
            android:layout_alignEnd="@+id/jsonCost"
            android:layout_marginStart="73dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/total"

            android:padding="20dp"
            android:text="total:"
            android:textColor="@color/flowerBlue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jsonStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total"
            android:layout_alignEnd="@+id/jsonIssued"
            android:layout_marginStart="31dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/PaymentStatus"

            android:padding="20dp"
            android:text="status:"
            android:textColor="@color/flowerBlue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jsonid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/SPid"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-68dp"
            android:layout_marginEnd="3dp"

            android:padding="20dp"
            android:text="id:"
            android:textColor="@color/flowerBlue"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PaymentStatus"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="137dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="159dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/btn_round"
            android:text="Checkout"
            android:textColor="#fff"
            android:translationZ="-1000dp" />

    </RelativeLayout>
</ScrollView>
