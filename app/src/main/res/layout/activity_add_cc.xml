<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addCCActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card number "
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:id="@+id/cnum"
        android:textColor="@color/colorPrimaryDark"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_credit_card_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/cnum"
        android:id="@+id/cimg"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardname Holder "
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:id="@+id/cNameHolder"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/cimg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cNameHolder"
        android:hint="Name holder"
        android:textColorHint="@color/blue"
        android:id="@+id/eTxtHolder"
        android:padding="10dp"
    />


    <EditText
        android:id="@+id/cEtext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter 16 digit card"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textColorHint="@color/blue"
        app:layout_constraintLeft_toRightOf="@+id/cimg"
        app:layout_constraintTop_toBottomOf="@+id/cnum"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiration date "
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:id="@+id/expirationDate"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/eTxtHolder"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/expText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="mm"
        android:padding="10dp"
        android:textColorHint="@color/blue"
        app:layout_constraintTop_toBottomOf="@+id/expirationDate"
        app:layout_constraintVertical_weight="1"
       />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/expirationDate"
        app:layout_constraintLeft_toRightOf="@+id/expText"
        android:hint="yyyy"
        android:textColorHint="@color/blue"
        android:id="@+id/expText2"
        android:padding="10dp"
        android:textAlignment="center"
        app:layout_constraintVertical_weight="1"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV "
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="center"
        android:padding="15dp"
        android:id="@+id/cvv"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/expText"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cvv"
        android:hint="3 digit"
        android:textColorHint="@color/blue"
        android:id="@+id/cvvText"
        android:padding="15dp"
        android:textAlignment="center"
        />


    <Button
        android:id="@+id/submit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Submit"

        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvvText" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#fff"
        android:id="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/cvvText"
        app:layout_constraintLeft_toRightOf="@+id/submit"
        android:gravity="center"
        android:layout_margin="20dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@color/colorPrimaryDark"
        />
</android.support.constraint.ConstraintLayout>