<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ProfileActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Fname"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:background="@drawable/txt_round"
        android:gravity="center"
        android:padding="20dp"
        android:text="First Name"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/firstName"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="firstName"
            android:textColor="#186785"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Fname"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lastName"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="lasttName"
            android:textColor="#186785"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Lname"
            app:layout_constraintTop_toBottomOf="@id/firstName" />

    <TextView
        android:id="@+id/Lname"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:background="@drawable/txt_round"
        android:gravity="center"
        android:padding="20dp"
        android:text="Last Name"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="77dp" />

        <TextView
            android:id="@+id/city"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/txt_round"
            android:gravity="center"
            android:padding="20dp"
            android:text="City"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/Lname" />

        <TextView
            android:id="@+id/cityName"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="8dp"

            android:gravity="center"
            android:padding="20dp"
            android:text="cityName"
            android:textColor="#186785"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/city"
            app:layout_constraintTop_toBottomOf="@id/lastName" />

        <TextView
            android:id="@+id/street"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/txt_round"
            android:gravity="center"
            android:padding="20dp"
            android:text="Street"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/city" />

        <TextView
            android:id="@+id/streetName"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="streetName"
            android:textColor="#186785"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/street"
            app:layout_constraintTop_toBottomOf="@+id/cityName" />

        <TextView
            android:id="@+id/email"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/txt_round"
            android:padding="20dp"
            android:text="Email"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/street"
            android:gravity="center"/>

        <TextView
            android:id="@+id/emailName"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="emailName"
            android:textColor="#186785"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/streetName" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/txt_round"
        android:gravity="center"
        android:padding="20dp"
        android:text="Phone"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="phoneNumber"
        android:textColor="#186785"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@id/emailName" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/edit_vector" />

</android.support.constraint.ConstraintLayout>


