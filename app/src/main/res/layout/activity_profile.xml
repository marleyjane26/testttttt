<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
<!--TODO:Need some improvement on xml use liner the design-->

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="First Name"
    android:textStyle="bold"
    android:textSize="20sp"
    android:padding="20dp"
    android:id="@+id/Fname"
    android:textColor="#9435a7"/>

    <TextView
        android:id="@+id/firstName"
        android:layout_width="143dp"
        android:layout_height="69dp"
        android:padding="20dp"
        android:text="............"
        android:textColor="#186785"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/Fname" />

    <TextView
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="..............."
        android:textColor="#186785"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/firstName"
        app:layout_constraintTop_toBottomOf="@+id/Fname" />
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Last Name"
android:textStyle="bold"
android:textSize="20sp"
android:padding="20dp"
android:id="@+id/Lname"
app:layout_constraintLeft_toRightOf="@+id/Fname"
    android:textColor="#9435a7"/>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="City"
android:textStyle="bold"
android:textSize="20sp"
android:padding="20dp"
android:id="@+id/city"
app:layout_constraintTop_toBottomOf="@+id/firstName"
    android:textColor="#9435a7"  />

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="............."
        android:textColor="#186785"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/city"
        app:layout_constraintTop_toBottomOf="@+id/lastName" />

    <TextView
        android:id="@+id/street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="20dp"
        android:text="Street"
        android:textColor="#9435a7"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/city" />

    <TextView
        android:id="@+id/streetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="20dp"
        android:text="................."
        android:textColor="#186785"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/street"
        app:layout_constraintTop_toBottomOf="@+id/cityName" />
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Email"
android:textStyle="bold"
android:textSize="20sp"
android:padding="20dp"
android:id="@+id/email"
app:layout_constraintTop_toBottomOf="@+id/street"
    android:textColor="#9435a7"/>

    <TextView
        android:id="@+id/emailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="................"
        android:textColor="#186785"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/streetName" />
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Phone"
android:textStyle="bold"
android:textSize="20sp"
android:padding="20dp"
android:id="@+id/phone"
app:layout_constraintTop_toBottomOf="@+id/email"
    android:textColor="#9435a7"/>

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="................"
        android:textColor="#186785"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@+id/emailName" />
    </android.support.constraint.ConstraintLayout>